{
   "version": "0.2.0",
   "configurations": [
        {
            "name": ".NET Core Launch (frontend)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "cwd": "${workspaceRoot}/frontend",
            "program": "${workspaceRoot}/frontend/bin/Debug/netcoreapp2.0/frontend.dll",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        {
            "name": ".NET Core Launch (backend)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "cwd": "${workspaceRoot}/backend",
            "program": "${workspaceRoot}/backend/bin/Debug/netcoreapp2.0/backend.dll",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            }
        },
        {
            "name": ".NET Core launch (frontend) (VSCE)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "vsce: service exec -t build (frontend)",
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}/frontend",
                "pipeProgram": "vsce",
                "windows": {
                    "pipeProgram": "vsce.cmd"
                },
                "pipeArgs": [
                    "-c",
                    "develop.workspace.vscode",
                    "service",
                    "exec",
                    "-t",
                    "debug"
                ],
                "quoteArgs": false,
                "debuggerPath": "../../vsdbg/vsdbg"
            },
            "cwd": "/src/frontend",
            "program": "/src/frontend/bin/Debug/netcoreapp2.0/frontend.dll",
            "sourceFileMap": {
                "/src": "${workspaceRoot}"
            }
        },
        {
            "name": ".NET Core launch (backend) (VSCE)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "vsce: service exec -t build (backend)",
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}/backend",
                "pipeProgram": "vsce",
                "windows": {
                    "pipeProgram": "vsce.cmd"
                },
                "pipeArgs": [
                    "-c",
                    "develop.workspace.vscode",
                    "service",
                    "exec",
                    "-t",
                    "debug"
                ],
                "quoteArgs": false,
                "debuggerPath": "../../vsdbg/vsdbg"
            },
            "cwd": "/src/backend",
            "program": "/src/backend/bin/Debug/netcoreapp2.0/backend.dll",
            "sourceFileMap": {
                "/src": "${workspaceRoot}"
            }
        }
    ]
}