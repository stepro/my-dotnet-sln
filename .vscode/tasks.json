{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "dotnet: build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet",
            "args": [
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "vsce: up (frontend)",
            "options": {
                "cwd": "${workspaceRoot}/frontend"
            },
            "command": "vsce",
            "windows": {
                "command": "vsce.cmd"
            },
            "args": [
                "-c",
                "develop.workspace.vscode",
                "up"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "taskName": "vsce: service exec -t build (frontend)",
            "options": {
                "cwd": "${workspaceRoot}/frontend"
            },
            "command": "vsce",
            "windows": {
                "command": "vsce.cmd"
            },
            "args": [
                "-c",
                "develop.workspace.vscode",
                "service",
                "exec",
                "-t",
                "build"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "vsce: up (backend)",
            "options": {
                "cwd": "${workspaceRoot}/backend"
            },
            "command": "vsce",
            "windows": {
                "command": "vsce.cmd"
            },
            "args": [
                "-c",
                "develop.workspace.vscode",
                "up"
            ],
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "taskName": "vsce: service exec -t build (backend)",
            "options": {
                "cwd": "${workspaceRoot}/backend"
            },
            "command": "vsce",
            "windows": {
                "command": "vsce.cmd"
            },
            "args": [
                "-c",
                "develop.workspace.vscode",
                "service",
                "exec",
                "-t",
                "build"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}